i = 0;
steps = 0;
while(i >= 0 and i < len(input)):
  steps += 1;
  prev = i;
  i += input[i];
  input[prev] += 1;
print(steps);

# Part 2

i = 0;
steps = 0;
while(i >= 0 and i < len(input)):
  steps += 1;
  prev = i;
  i += input[i];
  input[prev] = input[prev] + 1 if input[prev] < 3 else input[prev] - 1
print(steps);
